/* pages/player/player.wxss */
.player-container{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  filter: blur(40rpx);
  opacity: 0.5;
  z-index: -1;
}

.player-mask{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: -2;
  background-color: #222;
}

.player-info{
  text-align: center;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}

.player-disc{
  width: 592rpx;
  height: 592rpx;
  background:url('https://brain-music.oss-cn-shanghai.aliyuncs.com/D3BDD1080A72129346AA0B4B4964B75F.png?OSSAccessKeyId=LTAI4GHit95595QWLH9zcM3u&Expires=1611935331&Signature=lB61NkzZzPA0L67pudBTUHwSSRQ%3D') no-repeat center/contain;
  position: absolute;
  left: 50%;
  transform: translate(-50%, 140rpx);
}

.player-disc::after{
  content: '';
  width: 192rpx;
  height: 274rpx;
  position: absolute;
  top: -150rpx;
  left: 266rpx;
  background:url('https://brain-music.oss-cn-shanghai.aliyuncs.com/702CF6D95F29E2E594F53A3CAAB50E12.png?OSSAccessKeyId=LTAI4GHit95595QWLH9zcM3u&Expires=1611935465&Signature=kf%2B4bHPQGMrEcvRYvX0Ozr07Jgo%3D') no-repeat center/contain;
  transform: rotate(-15deg);
  transform-origin: 24rpx 10rpx;
}

.player-img{
  width: 368rpx;
  height: 368rpx;
  border-radius: 50%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-top:-184rpx;
  margin-left: -184rpx;
}

.control{
  position: absolute;
  bottom: 8%;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
}

.control .iconfont{
  color: #483D8B;
}

.icon-shangyishoushangyige, .icon-xiayigexiayishou{
  font-size: 80rpx;
}

.icon-bofang, .icon-bofang{
  font-size: 120rpx;
  margin: 0 50rpx;
}